<% var title = 'Formulaire login' %>
<% include head %>

<body>
<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Home Monitoring</strong> !</h1>
                    <div class="description">
                        <p>
                            Veuillez vous connecter pour accéder aux données
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Connexion</h3>
                            <p>Entrez votre login et mot de passe pour vous connecter:</p>
                        </div>
                        <div class="form-top-right">
                             <span style="color:darkgreen"> <i class="fa fa-lock"></i> </span>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/login" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-username">Pseudo</label>
                                <input type="text" name="login" placeholder="adresse mail" class="form-username form-control" id="login">
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-password">Mot de Passe</label>
                                <input type="password" name="password" placeholder="Mot de passe" class="form-password form-control" id="password">
                            </div>
                            <button type="submit" class="btn">Connexion !</button>
                        </form>
                         <br /> <a  href="/main" class="btn  btn-danger"> <span class="fa fa-reply" aria-hidden="true"></span> Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




