<% var title = 'Liste Equipement' %>
<% include head %>

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Home Monitoring</strong> !</h1>
                    <div class="description">
                        <p class="bg-danger">
                            Votre espace dédié pour gérer l'ensemble de vos équipements de chez vous
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Liste <b>Utilisateur</b>  </h3>
                            <p>Gerer l'ensemble des utilisateur dans votre espace</p>
                        </div>
                        <div class="form-top-right">
                            <span style="color:darkred"> <i class="fa fa-desktop" aria-hidden="true"></i> </span>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>mail</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i < listeutilisateur.length; i++) { %>
                            <tr>
                                <td><%= listeutilisateur[i].id_u %></td>
                                <td><%= listeutilisateur[i].nom_u %></td>
                                <td><%= listeutilisateur[i].prenom_u %></td>
                                <td> <%= listeutilisateur[i].mail_u %></td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                        <br /><a  href="/gestionUA" class="btn  btn-danger"> <span class="fa fa-reply" aria-hidden="true"></span> Retour</a>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<%include foot%>