<% var title = 'Suppression Equipement' %>
<% include head %>

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Home Monitoring</strong> !</h1>
                    <div class="description">
                        <p class="bg-danger">
                            Votre espace dédié pour gérer l'ensemble de vos équipements de chez vous
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Suppression <b>équipement</b>  </h3>
                            <p>Gerer l'ensemble de vos équipement dans votre espace</p>
                        </div>
                        <div class="form-top-right">
                            <span style="color:darkgreen"> <i class="fa fa-desktop" aria-hidden="true"></i> </span>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/supprEU" method="post" class="login-form">
                            <div class="form-group">
                                    <div class="dropdown">
                                        <select class="form-control" id="equipement" name="equipement" >
                                        <% for(var i = 0; i < equipements.length; i++) { %>
                                            <option value="<%= equipements[i].id_e%>"> <%= equipements[i].libelle %> <%= equipements[i].numero_serie %> </option>
                                        <% } %>
                                        </select>
                                    </div>
                                </div>
                            <input type="submit" value="Supprimer l'équipement" class="btn btn-warning btn-block">
                        </form>
                        <br /><a  href="/gestionEU" class="btn  btn-danger"> <span class="fa fa-reply" aria-hidden="true"></span> Retour</a>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<%include foot%>