<% var title = 'Inscription' %>
<% include head %>
<body>
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Home Monitoring</strong> !</h1>
                    <div class="description">
                        <p>
                            supprimer un utilisateur
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Supprimer un utilisateur</h3>
                            <p>supprimer utilisateur:</p>
                        </div>
                        <div class="form-top-right">
                            <span style="color:greenyellow"><i class="fa fa-remove"></i></span><span style="color:darkred"><i class="fa fa-user"></i> </span>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/suppUA" method="post" class="login-form">
                            <div class="dropdown">
                                <select  class="form-control" id="id_u" name="id_u" >
                                    <% for(var i = 0; i < utilisateur.length; i++) { %>
                                    <br /> <option value="<%= utilisateur[i].id_u%>"> <%= utilisateur[i].nom_u %> <%= utilisateur[i].prenom_u %>  </option><br />
                                    <% } %>
                                </select> <br />
                            </div>
                            <br /><button type="submit" class="btn">Supprimer l'utilisateur !</button>
                        </form>
                        <br /> <a  href="/gestionUA" class="btn  btn-danger"> <span class="fa fa-reply" aria-hidden="true"></span> Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




