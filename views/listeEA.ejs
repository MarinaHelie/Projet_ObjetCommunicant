<% var title = 'Liste Equipement' %>
<% include head %>

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Home Monitoring</strong> !</h1>
                    <div class="description">
                        <p class="bg-danger">
                            Espace administrateur
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Liste <b>équipement</b>  </h3>
                            <p>Gerer l'ensemble de vos équipement dans votre espace</p>
                        </div>
                        <div class="form-top-right">
                            <span style="color:darkred"> <i class="fa fa-desktop" aria-hidden="true"></i> </span>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Nom utilisateur</th>
                                <th>Prenom utilisateur</th>
                                <th>Libelle</th>
                                <th>Numero de série</th>
                                <th>Marque</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i = 0; i < jointure.length; i++) { %>
                            <tr>
                                <td><%= jointure[i].nom_u %></td>
                                <td><%= jointure[i].prenom_u %></td>
                                <td><%= jointure[i].libelle %></td>
                                <td><%= jointure[i].numero_serie %></td>
                                <td><%= jointure[i].marque %></td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>
                        <br /><a  href="/utilisateur" class="btn  btn-danger"> <span class="fa fa-reply" aria-hidden="true"></span> Retour</a>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<%include foot%>